# App
APP_NAME=Proxy Platform API
VERSION=1.0.0
DEBUG=false

# Database
DATABASE_URL=mysql+aiomysql://username:password@localhost:3306/database_name

# Redis
REDIS_URL=redis://localhost:6379

# Security / JWT
# IMPORTANT: Set a strong random secret in production
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Payment callback protection
# IMPORTANT: Set a strong random token and keep it secret
PAYMENT_CALLBACK_TOKEN=

# Cryptomus 支付
CRYPTOMUS_API_KEY=
CRYPTOMUS_PAYOUT_KEY=
CRYPTOMUS_MERCHANT_UUID=
CRYPTOMUS_WEBHOOK_URL=http://localhost:8000/api/v1/orders/payments/cryptomus-webhook
CRYPTOMUS_BASE_URL=https://api.cryptomus.com/v1

# Upstream API keys (set in production)
TOPPROXY_KEY=
MPROXY_TOKEN=

# Rate limiting
DEFAULT_RATE_LIMIT=1000
RATE_LIMIT_WINDOW=60

# CORS / Hosts
ALLOWED_ORIGINS=["*"]
ALLOWED_HOSTS=["*"]

# Schema management (development only)
# Set to true to allow create_all fallback (NOT for production)
ALLOW_DB_CREATE_ALL=false
